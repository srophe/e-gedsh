         <div type="entry">
                <head>Yawsep of Telkepe</head>
                <ab type="idnos">
                    <idno type="URI">https://gedsh.bethmardutho.org/Yawsep-of-Telkepe</idno>
                    <idno type="syriaca-bibl">http://syriaca.org/bibl/600</idno>
