         <div type="entry">
                <head>ʿEnanishoʿ</head>
                <ab type="idnos">
                    <idno type="URI">https://gedsh.bethmardutho.org/Enanisho</idno>
                    <idno type="syriaca-bibl">http://syriaca.org/bibl/204</idno>
